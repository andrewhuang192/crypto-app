<%- include('../partials/header'); %>

    <h1>Portfolio</h1>
    <table class="table">
      <form action="/portfolios" method="POST"> 
              <label>Name:
                <input type="text" name="name">
              </label>
              <button class="btn btn-primary">Add portfolio</button>
      </form>
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Portfolio Name</th>
            <th scope="col">Total Balance</th>
            <th scope="col">Change %</th>
            <th scope="col">Action</th>
         </tr>

         <% if (portfolio.length) { %> 
          <% portfolio.forEach(function(p, idx) { %> 
            <tr>
              <td> <%= idx + 1 %>  </td>
              <td> <a href="/portfolios/<%= p._id %>"><%= p.name %></a>  </td>
              <td> <%= p.user %>  </td>
              <td> whut  </td>
              <td> whut  </td>
              <td>
              <form action="/portfolios/<%= p._id %>?_method=DELETE" class="delete-form"	method="POST">
                    <button class="btn btn-primary" type="submit">DELETE</button>
              </form>
              </td>
            </tr>
          <% }); %> 
        <% } %> 
        </thead>
   
      </table>

<%- include('../partials/footer'); %>